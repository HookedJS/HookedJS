{
  "name": "@bdombro/hookedjs",
  "version": "0.6.1",
  "description": "Example application for running a fullstack, serverless Node API app on AWS",
  "main": "src/server.js",
  "license": "ISC",
  "scripts": {
    "api:build": "npm run lint && tsc && sam build && npm run clean",
    "api:clean": "tsc -b --clean",
    "api:start": "ts-node src/server.ts",
    "api:dev": "ts-node-dev --transpile-only src/server.ts",
    "db": "docker start serverless-mysql",
    "db:init": "docker run -d --name serverless-mysql -p 3306:3306 -e MYSQL_ROOT_PASSWORD=password -e MYSQL_DATABASE=public mysql:5.7",
    "db:seed": "npm run typeorm -- schema:drop && ts-node --require ./src/lib/polyfills src/db/seed.ts",
    "aws:deploy": "npm run build && sam deploy",
    "aws:logs": "sam logs -n ApiLambda --stack-name hookedjs2 -t",
    "typeorm": "ts-node --require ./src/lib/polyfills ./node_modules/typeorm/cli.js",
    "typeorm:migration-gen": "npm run typeorm -- schema:drop && npm run typeorm -- migration:run && npm run typeorm -- migration:generate -n ",
    "web:dev": "snowpack dev --secure",
    "//build:hint": "must mv lib out of public to avoid adding hashes to the filenames",
    "web:build": "mv public/lib . && NODE_ENV=production snowpack build && cp -r lib build && mv lib public && workbox generateSW && date > build/buildTime.txt",
    "web:start": "ts-node --project server.tsconfig.json --transpile-only server.ts",
    "web:test": "web-test-runner \"src/**/*.test.tsx\"",
    "validate": "npm run lint && tsc --noEmit",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "prepare": "if [ -d \".git\" ]; then husky install; fi",
    "dev": "PORT=4000 run-p api:dev web:dev"
  },
  "files": [
    "src"
  ],
  "imports": {
    "#hint": "Subpath folder mappings are deprecated after node v16 -- Maybe consider npm/module-alias later",
    "#src/": "./src/",
    "#lib/": "./src/lib/",
    "#db/": "./src/db/"
  },
  "dependencies": {
    "aws-lambda-fastify": "^1.4.4",
    "aws-sdk": "^2.888.0",
    "cuid": "^2.1.8",
    "data-api-client": "^1.2.0",
    "fastify": "^3.14.2",
    "fastify-file-upload": "^3.0.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.4.0",
    "fastify-static": "^3.3.1",
    "glob": "^7.1.6",
    "http2-proxy": "^5.0.53",
    "mysql2": "^2.2.5",
    "npm-run-all": "^4.1.5",
    "typeorm": "^0.2.32",
    "typeorm-aurora-data-api-driver": "^2.0.5"
  },
  "devDependencies": {
    "@prefresh/snowpack": "^3.1.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@testing-library/preact": "^2.0.1",
    "@types/chai": "^4.2.14",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@web/test-runner": "^0.13.3",
    "chai": "^4.3.4",
    "eslint": "^7.18.0",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^6.0.0",
    "mdi-paths-split": "^5.9.55",
    "preact": "^10.5.13",
    "snowpack": "^3.5.2",
    "snowpack-plugin-hash": "^0.16.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4",
    "workbox-cli": "^6.0.2"
  },
  "engines": {
    "node": ">=14 <15"
  }
}
